      creating @Named managed beans. -->
 <navigation-rule>
  <display-name>login.xhtml</display-name>
  <from-view-id>/login.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>success</from-outcome>
   <to-view-id>/student-list.xhtml</to-view-id>
   <redirect />
  </navigation-case>
  <navigation-case>
   <from-outcome>failure</from-outcome>
   <to-view-id>/login.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
  <navigation-rule>
  <display-name>index.jsp</display-name>
  <from-view-id>/index.jsp</from-view-id>
  <navigation-case>
   <to-view-id>/add.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>


